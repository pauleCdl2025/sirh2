# Configuration de l'environnement pour le système SIRH
# Copiez ce fichier vers .env et ajustez les valeurs selon votre environnement

# Configuration du serveur
PORT=5001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
REQUEST_TIMEOUT=300000

# Configuration de la base de données PostgreSQL
DB_USER=postgres
DB_HOST=localhost
DB_NAME=rh_portal
DB_PASSWORD=your-database-password-here
DB_PORT=5432

# Configuration des uploads
MAX_FILE_SIZE=10485760
MAX_FILES=10
UPLOAD_PATH=./uploads

# Configuration de sécurité
# ⚠️ IMPORTANT: Générer une clé JWT forte et unique pour la production
# Exemple: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-here-CHANGE-THIS-IN-PRODUCTION
JWT_EXPIRES_IN=24h

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuration CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configuration des sessions
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400000

# Configuration des limites de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100








